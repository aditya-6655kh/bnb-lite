<% layout('layouts/boilerplate') %>
<body>
  <div class="row">
    <div class="form-container col-8 offset-2">
      <h2>Edit Listing</h2>

      <form action="/listings/<%= listing._id %>?_method=PUT" method="POST">
        <div class="items mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            id="title"
            name="title"
            value="<%= listing.title %>"
            class="form-control"
            required
          />
        </div>

        <div class="items mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            id="description"
            name="description"
            class="form-control"
            required
          >
<%= listing.description %></textarea
          >
        </div>

        <div class="items mb-3">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            id="price"
            name="price"
            value="<%= listing.price %>"
            class="form-control"
            required
          />
        </div>
        <div class="items mb-3">
          <label for="image[filename]" class="form-label">Image Filename</label>
          <input
            type="text"
            id="filename"
            name="image[filename]"
            value="<%= listing.image.filename %>"
            class="form-control"
            required
          />
        </div>
        <div class="items mb-3">
          <label for="image[url]" class="form-label">Image URL</label>
          <input
            type="text"
            id="image-url"
            name="image[url]"
            value="<%= listing.image.url %>"
            class="form-control"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary mb-3">
          Update Listing
        </button>
      </div>
    </form>
  </div>
</body>
